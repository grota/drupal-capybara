source "http://rubygems.org"

gem 'capybara'
gem 'rspec'
gem 'guard-rspec'
gem 'guard'
# gems used for get filesystem notifications (instead of polling)
gem 'rb-inotify', '~> 0.8.8', :require => false
gem 'rb-fsevent', :require => false #win32
gem 'rb-fchange', :require => false #osx

# optional, only for Linux. It falls back to notifysend if missing
# See https://github.com/guard/guard for other notifiers
gem 'libnotify'

# If you want to skip selenium and use webkit via QtWebKit
# (requires a sudo apt-get install libqtwebkit-dev)
gem "capybara-webkit"
